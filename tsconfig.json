{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": [
            "es2023"
        ],
        "module": "node16",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",
        "jsx": "react",
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "baseUrl": "."
    },
    "include": [
        "src/**/*",
        "types/**/*",
    ]
}